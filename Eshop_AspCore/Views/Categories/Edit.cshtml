@model Eshop_AspCore.Data.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="box box-info">

    <div class="box-header">
        <i class="fa fa-group"></i>
        <h3 class="box-title">ویرایش دسته</h3>
    </div>
    <div class="box-body">
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CatId" />
                    <div class="form-group">
                        <label asp-for="CatTitle" class="control-label"></label>
                        <input asp-for="CatTitle" class="form-control" />
                        <span asp-validation-for="CatTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ذخیره" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-primary">بازگشت</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
