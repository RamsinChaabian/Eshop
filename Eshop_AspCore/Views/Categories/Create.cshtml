@model Eshop_AspCore.Data.Models.Category

@{
    ViewData["Title"] = "تعریف دسته اصلی جدید";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="box box-info">
    <div class="box-header">
        <i class="fa fa-object-group"></i>
        <h3 class="box-title">تعریف دسته اصلی جدید</h3>
    </div>
    <div class="box-body">

        <hr />
        <div class="row">
            <div class="col-md-3">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CatTitle" class="control-label"></label>
                        <input asp-for="CatTitle" class="form-control" />
                        <span asp-validation-for="CatTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ثبت" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-primary">بازگشت</a>
                    </div>
                </form>
            </div>
            <div class="col-md-7">
                <label class="control-label">راهنما</label>
                <img src="~/images/CatPic1.png" width="700" />
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
