@model Eshop_AspCore.Data.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="box box-info">
    <div class="box-header">
        <i class="fa fa-group"></i>
        <h3 class="box-title">حذف دسته</h3>
    </div>
    <div class="box-body">
        <h3> آیا میخواهید این دسته را حذف نمایید؟</h3>
        <div>
            <h4>Category</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.CatTitle)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CatTitle)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="CatId" />
                <input type="submit" value="حذف" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-primary">انصراف</a>
            </form>
        </div>
    </div>
</div>
