@model IEnumerable<Eshop_AspCore.Data.Models.Category>

@{
    ViewData["Title"] = "مدیریت دسته های اصلی ";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="box box-info">

    <div class="box-header">
        <i class="fa fa-group"></i>
        <h3 class="box-title">مدیریت دسته های اصلی</h3>
    </div>
    <div class="box-body">

        <p>
            <a class="btn btn-success" asp-action="Create"><i class="fa fa-save"></i>&nbsp; تعریف دسته جدید</a>
        </p>
        <table class="table table-bordered table-hover table-responsive table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CatTitle)
                    </th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CatTitle)
                        </td>
                        <td>
                            <a asp-action="Edit" class="btn btn-primary btn-xs" asp-route-id="@item.CatId">ویرایش</a>
                            <a asp-action="Delete" class="btn btn-danger btn-xs" asp-route-id="@item.CatId">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

