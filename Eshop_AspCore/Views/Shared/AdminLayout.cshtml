    <meta name="google" content="notranslate" />

    <link href="~/AdminLayout/Content/panel.css" rel="stylesheet" />
    <link href="~/AdminLayout/Content/font.css" rel="stylesheet" />
    <link href="~/AdminLayout/Content/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/AdminLayout/Content/jquery-confirm.min.css" rel="stylesheet" />

    <script src="~/AdminLayout/Scripts/jquery.min.js"></script>
