@{
    MenuRepository Rep_Menu = new MenuRepository();
}
<div class="wrapper">

    <div class="header_top">
        <!--header_top-->
        <div class="container">
            <div class="mainmenu">
                <ul>
                    @*<li><a href="/" class="active">خانه</a></li>*@
                    @foreach (var item in Rep_Menu.GetMenu())
                    {
                        <li>
                            <a href="@item.Link">@item.Title</a>
                        </li>
                    }

                </ul>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>
