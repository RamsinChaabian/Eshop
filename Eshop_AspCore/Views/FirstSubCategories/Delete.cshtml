@model Eshop_AspCore.Data.Models.FirstSubCategory

@{
    ApplicationDbContext database = new ApplicationDbContext();
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    var q = database.Tbl_Category.ToList();

}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>FirstSubCategory</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CatId_FK)
        </dt>
        <dd>
            @{
                var CatName = q.Where(c => c.CatId == Model.CatId_FK).FirstOrDefault().CatTitle;
            }
            @CatName
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FirstSubCatTitle)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstSubCatTitle)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd>
            <img src="~/Files/Images/@Model.Picture" class="img-thumbnail img-rounded" width="150" height="150" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FirstSubCatId" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">انصراف</a>
