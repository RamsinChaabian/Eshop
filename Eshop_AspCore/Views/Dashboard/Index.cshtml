
@{
    DashboardRepository rep_dashboard = new DashboardRepository();
    ViewData["Title"] = "داشبورد";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="box box-info">
        
        <div class="box-body">
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">

                        <div class="row">
                            <div class="col-lg-3 col-xs-6">
                                <!-- small box -->
                                <a href="#">
                                    <div class="small-box bg-aqua">
                                        <div class="inner">
                                            <i class="glyphicon glyphicon-shopping-cart"></i>
                                            <p>سفارش جدید</p>
                                        </div>
                                        <div class="icon">

                                        </div>
                                    </div>
                                </a>
                            </div><!-- ./col -->
                            <div class="col-lg-3 col-xs-6">
                                <!-- small box -->
                                <a href="#">
                                    <div class="small-box bg-green">
                                        <div class="inner">
                                            <i class="fa fa-fw fa-pencil-square-o"></i>
                                            <p>نوشته ها</p>
                                        </div>
                                        <div class="icon">

                                        </div>

                                    </div>
                                </a>
                            </div><!-- ./col -->
                            <div class="col-lg-3 col-xs-6">
                                <!-- small box -->
                                <a href="#">
                                    <div class="small-box bg-yellow">
                                        <div class="inner">
                                            <span class="glyphicon glyphicon-cog"></span>
                                            <p>تنظیمات</p>
                                        </div>
                                        <div class="icon">

                                        </div>

                                    </div>
                                </a>
                            </div><!-- ./col -->
                            <div class="col-lg-3 col-xs-6">
                                <!-- small box -->
                                <a href="#">
                                    <div class="small-box bg-red">
                                        <div class="inner">
                                            <span class="glyphicon glyphicon-user"></span>
                                            <p>کاربران</p>
                                        </div>
                                        <div class="icon">

                                        </div>

                                    </div>
                                </a>
                            </div><!-- ./col -->
                        </div>
                        <div class="row">

                            <div class="col-lg-12 connectedSortable">
                                <div class="box">
                                    <div class="box-header">
                                        <h3 class="box-title">
                                            نمای کلی
                                        </h3>
                                        <div class="box-tools pull-left">
                                            <button class="btn btn-box-tool" data-widget="collapse" data-tooltip="tooltip" title="باز و بسته شدن"><i class="fa fa-minus"></i></button>
                                        </div>
                                    </div>
                                    <div class="box-body">
                                        <div class="row">
                                            <div class="col-md-4 col-sm-6 col-xs-12">
                                                <div class="small-box bg-green">
                                                    <div class="inner">
                                                        <h3>
                                                            @rep_dashboard.getNotConfirmCountOrders()
                                                        </h3>
                                                        <p>
                                                            سفارشات پرداخت نشده
                                                        </p>
                                                    </div>
                                                    <div class="icon">
                                                        <i class="fa fa-check-square-o"></i>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4 col-sm-6 col-xs-12">
                                                <div class="small-box bg-gold">
                                                    <div class="inner">
                                                        <h3>
                                                            @rep_dashboard.getCountUsers()
                                                        </h3>
                                                        <p>
                                                            کاربران
                                                        </p>
                                                    </div>
                                                    <div class="icon">
                                                        <i class="fa fa-exclamation-triangle"></i>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4 col-sm-6 col-xs-12">
                                                <div class="small-box bg-light-blue">
                                                    <div class="inner">
                                                        <h3>
                                                            @rep_dashboard.getCountProducts()
                                                        </h3>
                                                        <p>
                                                            محصولات
                                                        </p>
                                                    </div>
                                                    <div class="icon">
                                                        <i class="fa fa-pie-chart"></i>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4 col-sm-6 col-xs-12">
                                                <div class="small-box bg-purple">
                                                    <div class="inner">
                                                        <h3>
                                                            @rep_dashboard.getConfirmCountOrders()
                                                        </h3>
                                                        <p>
                                                            تعداد فروش کل
                                                        </p>
                                                    </div>
                                                    <div class="icon">
                                                        <i class="fa fa-dollar"></i>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-4 col-sm-6 col-xs-12">
                                                <div class="small-box bg-olive">
                                                    <div class="inner">
                                                        <h3>
                                                            @rep_dashboard.SeeProducts()
                                                        </h3>
                                                        <p>
                                                            تعداد بازدید کل محصولات
                                                        </p>
                                                    </div>
                                                    <div class="icon">
                                                        <i class="fa fa-puzzle-piece"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
