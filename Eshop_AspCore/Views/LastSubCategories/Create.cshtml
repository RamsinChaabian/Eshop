@model Eshop_AspCore.Data.Models.LastSubCategory

@{
    ApplicationDbContext database = new ApplicationDbContext();
    ViewData["Title"] = "تعریف زیر دسته اخر";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    var q = database.Tbl_SecondSubCategory.ToList();
}

<div class="box box-info">
    <div class="box-header">
        <i class="fa fa-object-group"></i>
        <h3 class="box-title">تعریف زیر دسته اخر</h3>
    </div>
    <div class="box-body">
        <hr />
        <div class="row">
            <div class="col-md-3">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">عنوان زیر دسته دوم</label>
                        <select asp-for="SecondSubCatId_FK" class="form-control">
                            @foreach (var item in q)
                            {
                                <option value="@item.SecondSubCatId">@item.SecondSubCatTitle</option>
                            }
                        </select>
                        <span asp-validation-for="SecondSubCatId_FK" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastSubCatTitle" class="control-label"></label>
                        <input asp-for="LastSubCatTitle" class="form-control" />
                        <span asp-validation-for="LastSubCatTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ثبت" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-primary">بازگشت</a>
                    </div>
                </form>
            </div>
            <div class="col-md-7">
                <label class="control-label">راهنما</label>
                <img src="~/images/CatPic4.png" width="700" />
            </div>
        </div>

    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
